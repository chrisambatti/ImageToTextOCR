<Window x:Class="ImageToTextOCR.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Invoice OCR - Executive View" Height="450" Width="700"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <StackPanel>
            <Button Content="Upload Invoice" Width="150" Height="35" Click="Upload_Click" Margin="0,0,0,10"/>

            <TextBlock Text="Company Name:" FontWeight="Bold"/>
            <TextBlock Name="CompanyNameBox" FontSize="14" Margin="0,0,0,10"/>

            <TextBlock Text="Invoice No:" FontWeight="Bold"/>
            <TextBlock Name="InvoiceNoBox" FontSize="14" Margin="0,0,0,10"/>

            <TextBlock Text="Date:" FontWeight="Bold"/>
            <TextBlock Name="DateBox" FontSize="14" Margin="0,0,0,10"/>

            <TextBlock Text="TRN:" FontWeight="Bold"/>
            <TextBlock Name="TRNBox" FontSize="14" Margin="0,0,0,10"/>
        </StackPanel>
    </Grid>
</Window>
